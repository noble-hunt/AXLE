{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": ".",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": false,
    "declaration": false,
    "allowImportingTsExtensions": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "server/**/*.ts",
    "lib/**/*.ts",
    "shared/**/*.ts",
    "api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/__tests__/**",
    "server/index.ts"
  ]
}
