{
  "version": 2,
  "framework": null,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD",
  "functions": {
    "api/[...axle].ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "/api/[...axle]" 
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
