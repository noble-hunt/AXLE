{
  "buildCommand": "(npx tsc -p tsconfig.server.json --noEmitOnError false || true) && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "/api" 
    }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
