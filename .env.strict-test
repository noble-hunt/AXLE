# Strict Testing Mode - Forces premium-only with strict quality gates
# Use this for development/CI to ensure premium path never degrades

# Disable fallback generators
export AXLE_DISABLE_SIMPLE=true
export AXLE_DISABLE_MOCK=true

# Force premium generator only (no fallbacks)
export HOBH_FORCE_PREMIUM=true

# Enable strict quality gates (hard-fail on time_fit:false, style_ok:false)
export HOBH_PREMIUM_STRICT=true

# Usage:
# source .env.strict-test && npm run dev
